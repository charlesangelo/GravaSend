<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeedTrack">

    <TextView
        android:id="@+id/averageSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Speed: N/A"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <!-- Add a TextView to display Maximum Speed -->
    <TextView
        android:id="@+id/maxSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Speed: N/A"
        android:textSize="20sp"
        android:layout_below="@id/averageSpeedTextView"
        android:layout_centerHorizontal="true"/>

    <!-- Add a TextView to display Speed Error -->
    <TextView
        android:id="@+id/speedErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Error: N/A"
        android:textSize="20sp"
        android:layout_below="@id/maxSpeedTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/harshBrakingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="628dp"
        android:text="Harsh Braking" />

    <TextView
        android:id="@+id/suddenAccelerationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="527dp"
        android:text="Sudden Acceleration" />

</RelativeLayout>
