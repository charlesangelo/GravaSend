<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header (Gray) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#808080" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Tag: Safety Checklist -->
        <TextView
            android:id="@+id/safetyChecklistTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:layout_marginStart="16dp"
            android:text="Safety Checklist"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Button: Save -->
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="255dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="114dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Save" />

        <!-- Button: Clear -->
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="519dp"
            android:layout_marginBottom="115dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Clear" />

        <!-- Plate Number -->
        <TextView
            android:id="@+id/plateNumberTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/safetyChecklistTag"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:text="Plate Number"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/plateNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plateNumberTag"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="Enter Plate Number"
            android:inputType="text" />

        <!-- Odometer -->
        <TextView
            android:id="@+id/odometerTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plateNumberInput"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Odometer"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/odometerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/odometerTag"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="Enter Odometer Reading"
            android:inputType="number" />

        <!-- Image and Image Description -->
        <RelativeLayout
            android:id="@+id/imageTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/odometerInput"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#EEEEEE">

            <!-- ImageView for Image Selection -->
            <ImageView
                android:id="@+id/imagePlaceholder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="#CCCCCC"
                android:clickable="true"
                android:src="@drawable/ic_launcher_foreground" />

            <!-- EditText for Image Description -->
            <EditText
                android:id="@+id/imageDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imagePlaceholder"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:hint="Enter Image Description"
                android:inputType="text" />

            <!-- CheckBox (Upper Right) -->
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="Done" />
        </RelativeLayout>

        <!-- Select Image Button -->
        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTextContainer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Select Image" />

        <!-- Footer (Gray) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#808080" />
    </RelativeLayout>
</LinearLayout>
