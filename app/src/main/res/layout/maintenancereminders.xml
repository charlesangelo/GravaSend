<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header (Gray) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#808080" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_launcher_background" />

        <!-- Tag: Maintenance History -->
        <TextView
            android:id="@+id/maintenanceHistoryTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/backButton"
            android:layout_centerHorizontal="true"
            android:text="Maintenance Reminders"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" /> <!-- Blue color, you can use other color codes or resources as needed -->

        <!-- First Text Field -->

        <!-- Checkbox -->

        <!-- Checkbox -->

        <EditText
            android:id="@+id/firstMaintenanceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintenanceHistoryTag"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="144dp"
            android:hint="Filter Change" />

        <!-- Checkbox -->

        <CheckBox
            android:id="@+id/firstMaintenanceItemCheckBox"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="284dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="549dp"
            android:text="Due Today" />

        <EditText
            android:id="@+id/secondMaintenanceItem"
            android:layout_width="220dp"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="149dp"
            android:hint="Filter Change" />

        <CheckBox
            android:id="@+id/secondMaintenanceItemCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="282dp"
            android:layout_marginTop="183dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="464dp"
            android:text="Due Today" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="190dp"
            android:text="Done" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:background="#808080" />

    </RelativeLayout>

</LinearLayout>
